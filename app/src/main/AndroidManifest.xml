<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.marcelomaia.remind">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />

    <application
        android:name="com.marcelomaia.remind.App"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Remind">

        <activity
            android:name="com.marcelomaia.remind.views.AlarmPicker"
            android:exported="false" />

        <activity
            android:name="com.marcelomaia.remind.views.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.marcelomaia.remind.views.RingActivity"
            android:exported="true"
            android:parentActivityName="com.marcelomaia.remind.views.MainActivity" />

        <receiver android:name="com.marcelomaia.remind.MACReceiver">
            <intent-filter>
                <action android:name="TRIGGERED_ALARM" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>

        <service android:name="com.marcelomaia.remind.service.AlarmService" />
    </application>

</manifest>